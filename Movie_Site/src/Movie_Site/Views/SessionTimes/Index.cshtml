@model IEnumerable<Movie_Site.Models.SessionTimes>

<section class="md-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 ">
                <!-- title-01 -->
                <div class="title-01 title-01__style-03 md-text-left">
                    <h2 class="title-01__title">Session Times</h2>
                    <nav style="padding-bottom:10px">
                        <a class="breadcrumb__item" asp-area="" asp-controller="Movies" asp-action="Index">@ViewBag.MovieTitle</a>
                        <a class="breadcrumb__item" asp-area="" asp-controller="Movies" asp-action="SelectCineplex">@ViewBag.Location</a>
                        <span class="breadcrumb__item active">Session Times</span>
                    </nav>
                    <div>
                        <table cellpadding="10">
                            <tr>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Time
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                // Later do an if statement to check cineplex and movie with a count, if count = 0 display msg
                                <tr>
                                    <td>
                                        @item.MovieTime.ToString("hh:mm tt")
                                    </td>
                                    <td>
                                        @item.MovieTime.ToString("dd MMMM")
                                    </td>
                                    <td>
                                        <button class="btn btn-default">BOOK</button>
                                    </td>
                                </tr>
                                    
                            }
                        </table>
                    </div>
                </div><!-- End / title-01 -->
              </div>
            <div class="col-lg-6 ">
                <div class="js-consult-slider">
                    <!-- Replace image with relative images-->
                    <!-- carousel__element owl-carousel -->
                    <div class="carousel__element owl-carousel" data-options='{"items":1,"loop":true,"dots":false,"nav":false,"margin":30,"responsive":{"0":{"items":2},"576":{"items":3},"992":{"items":1}}}'>
                        <div class="image-full"><img src="~/img/image-01.jpg" alt=""></div>
                        <div class="image-full"><img src="~/img/image-02.jpg" alt=""></div>
                    </div><!-- End / carousel__element owl-carousel -->

                </div>
            </div>
        </div>
    </div>
</section>